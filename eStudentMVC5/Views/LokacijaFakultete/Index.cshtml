@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Specific{
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.0.3/jquery.min.js"></script>
    <script src="~/static/dist/js/zemljevid.js"></script>
    <!--Google Maps API-->
    <script type="text/javascript"
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDnycWatbGyK6ldFqErjFtko1yeMclNUOA&amp;sensor=true"></script>

    <!--<script src="http://maps.google.com/maps/api/js?sensor=true"></script>-->
    <script src="~/static/dist/js/lokacija.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Kako do nas?</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading red">
                Lokacija fakultete
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="map-canvas"></div>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-6 -->

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading red">
                Vaša lokacija
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div id="map"></div>
                <p><b>Vaš naslov</b>: <span id="address"></span></p>

                <p id="error" class='obvestilo label label-danger fade-in'></p>
                <a id="povezavaOdpri" target="_blank" class="btn btn-primary btn-xs">
                    Prikaži navodila za pot do
                    fakultete
                </a>
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <!-- /.col-lg-6 -->
</div>
