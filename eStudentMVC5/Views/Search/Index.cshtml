@model eStudentMVC5.Models.SearchModel
    @{
        ViewBag.Title = "Iskanje";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Iskanje</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading red">
                    Vnesi iskalni niz
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    @using (Html.BeginForm("Index", "Search", FormMethod.Post))
                    {
                        @Html.ValidationSummary(true)
                        <form>
                            <div class="form-group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-fw fa-search"></i>
                                    </div>
                                    @Html.TextBoxFor(m => m.query, new { data_bind = "value: query", @class = "form-control", @placeholder = "iskalni niz", @required = "required" })
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Iskanje" class="btn btn-danger btn-block">
                            </div>
                        </form>
                    }
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-6 -->

        <div class="col-lg-6">
            <div class="panel panel-default">
                <div class="panel-heading red">
                    Seznam rezultatov
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    Iskalni niz @Model.query ima toliko zadetkov:
                    <ul>
                        <li><a href="@Url.Action("Index", "SeznamStudentov")">seznam študentov: @Model.stStudentov</a></li>
                        <li><a href="@Url.Action("Index", "SeznamZaposlenih")">seznam zaposlenih: @Model.stZaposlenih</a></li>
                        <li><a href="@Url.Action("Index", "Predmeti")">seznam predmetov: @Model.stPredmetov</a></li>
                        <li><a href="@Url.Action("Index", "RazpisaniRoki")">seznam izpitnih rokov: @Model.stIzpitnihRokov</a></li>
                    </ul>
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        <!-- /.col-lg-6 -->

    </div>
    <!-- /.row -->
