@{
    ViewBag.Title = "Razpisani izpitni roki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Zaključeni izpitni roki</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading red">
                Poročilo o zaključenih izpitnih rokih
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive table-bordered">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Predmet</th>
                                <th>Profesor</th>
                                <th>Izpitni rok</th>
                                <th>Datum</th>
                                <th>Prostor</th>
                                <th>Komentar</th>
                                <th>Pozitivno</th>
                                <th>Negativno</th>
                                <th>Skupaj</th>
                                <th>Grafični prikaz realizacije</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in @ViewBag.izpitniRoki)
                            {
                                <tr>
                                    <td>@s.predmet.imePredmeta</td>
                                    <td>@s.predmet.uporabnik.ime @s.predmet.uporabnik.priimek</td>
                                    <td>@s.izpitnirok.stRoka</td>
                                    <td>@s.izpitnirok.datum</td>
                                    <td>@s.izpitnirok.prostor</td>
                                    <td>@s.izpitnirok.komentar</td>
                                    <td>@s.pozitivno</td>
                                    <td>@s.negativno</td>
                                    <td>@s.skupaj</td>
                                    <td>
                                        <div class="progress progress-striped active">
                                            @if (@s.procenti >= 50.0) {
                                            <div class="progress-bar progress-bar-success" role="progressbar"
                                                 style="width: @s.procenti%">
                                            </div>
                                            }
                                            else {
                                            <div class="progress-bar progress-bar-danger" role="progressbar"
                                                 style="width: @s.procenti%">
                                            </div>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
