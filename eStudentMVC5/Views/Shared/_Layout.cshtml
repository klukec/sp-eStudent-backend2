<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <meta name="description" content="Študijski informacijski sistem e-Študent">
    <meta name="author" content="Matic - Makro.si">
    <link rel="icon" href="http://www.makro.si/favicon.ico">

    <title>@ViewBag.Title - eStudent</title>
    @Styles.Render("~/Content/matic")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Specific", false)
    <link href="/static/bower_components/font-awesome/css/font-awesome.min.css" rel=" stylesheet" type="text/css">
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
            <a class="navbar-brand" href="index.html">
                <div id="logo"></div>
            </a>
        </div>
        <!-- /.navbar-header -->

        <ul class="nav navbar-top-links navbar-right">
            <li><a href="userProfile.html"><i class="fa fa-user fa-fw"></i></a></li>
            <li><a href="login.html"><i class="fa fa-sign-out fa-fw"></i></a></li>
            <!-- /.dropdown -->
        </ul>
        <!-- /.navbar-top-links -->

        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                <ul class="nav" id="side-menu">
                    <li>
                        <a href="@Url.Action("Index", "Home")"><span><i class="fa fa-dashboard fa-fw"></i> Nadzorna plošča</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "Indeks")"><span><i class="fa fa-pencil fa-fw"></i> Elektronski indeks</span></a>
                    </li>
                    <li>
                        <a href="#">
                            <i class="fa fa-folder-open fa-fw"></i> Izpitni roki<span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>@Html.ActionLink("Razpisani izpitni roki", "Index", "RazpisaniRoki")</li>
                            <li>@Html.ActionLink("Razpiši izpitni rok", "Index", "RazpisiRok")</li>
                            <li>@Html.ActionLink("Zaključeni izpitni roki", "Index", "ZakljuceniRoki")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>

                    <li>
                        <a href="#">
                            <i class="fa fa-user fa-fw"></i> Uporabniški podatki<span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>@Html.ActionLink("Upravljaj", "Index", "UporabniskiPodatki")</li>
                            <li>@Html.ActionLink("Seznam študentov", "Index", "SeznamStudentov")</li>
                            <li>@Html.ActionLink("Seznam zaposlenih", "Index", "SeznamZaposlenih")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>

                    <li>
                        <a href="#">
                            <i class="fa fa-graduation-cap fa-fw"></i> Študijski podatki<span class="fa arrow"></span>
                        </a>
                        <ul class="nav nav-second-level">
                            <li>@Html.ActionLink("Predmeti", "Index", "Predmeti")</li>
                        </ul>
                        <!-- /.nav-second-level -->
                    </li>

                    <li>
                        <a href="@Url.Action("Index", "LokacijaFakultete")"><span><i class="fa fa-map-marker fa-fw"></i> Lokacija fakultete</span></a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index", "About")"><span><i class="fa fa-info-circle fa-fw"></i> O e-Študentu</span></a>
                    </li>
                </ul>
            </div>
            <!-- /.sidebar-collapse -->
        </div>
        <!-- /.navbar-static-side -->
    </nav>

    <div id="page-wrapper">
        @RenderBody()
    </div>

    <footer>
        <div class="panel-footer noga">
            <a href="http://www.makro.si" title="Izvedba : Makro.si" target="_blank">
                <div id="makro-izvedba">
                    <div id="makro-podpis"></div>
                </div>
            </a>
            <div id="fri-izvedba">
                &copy; FRI UNI 2015/16
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/matic")
    @RenderSection("scripts", required: false)
</body>
</html>
