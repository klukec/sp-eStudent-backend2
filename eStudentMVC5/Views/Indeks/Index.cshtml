@{
    ViewBag.Title = "Elektronski indeks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Specific{
    <script src="~/static/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="~/static/bower_components/datatables-plugins/integration/bootstrap/3/dataTables.bootstrap.min.js"></script>
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Elektronski indeks</h1>

        <div class="btn-group btn-breadcrumb">
            <a href="/" class="btn btn-default"><i class="fa fa-home"></i></a></a>
            <a href="@Url.Action("Index", "SeznamStudentov")" class="btn btn-default">Seznam študentov</a>
            <a href="#" class="btn btn-default">Elektronski indeks</a>
        </div>
    </div>
    <!-- /.col-lg-12 -->
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading red">
                Elektronski indeks
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive table-bordered">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Predmet</th>
                                <th>Ocenil</th>
                                <th>Datum</th>
                                <th>KT</th>
                                <th>Ocena</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in @ViewBag.opravljeniPredmeti)
                            {
                                <tr>
                                    <td>@ViewBag.opravljeniPredmeti.IndexOf(s)</td>
                                    <td>@s.predmet.imePredmeta</td>
                                    <td>@s.predmet.uporabnik.ime @s.predmet.uporabnik.priimek</td>
                                    <td>@s.izpitnirok.datum</td>
                                    <td>@s.predmet.stKreditnih</td>
                                    <td>@s.ocena1</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

        <div class="panel panel-default">
            <div class="panel-heading red">
                Skupna povprečna ocena
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Število opravljenih izpitov</th>
                                <th>Kreditne točke</th>
                                <th>Skupno povprečje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>@ViewBag.stOpravljenih</td>
                                <td>@ViewBag.sumKreditne</td>
                                <td>@ViewBag.povprecje</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
